/* logs.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.log-header {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.current-time {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
}

.log-input-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.log-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.add-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 15rpx 0;
  border-radius: 8rpx;
}

.log-list {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.log-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.log-item:last-child {
  border-bottom: none;
}

.log-content {
  flex: 1;
}

.log-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.log-time {
  font-size: 24rpx;
  color: #999;
}

.delete-btn {
  color: #ff4d4f;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #ff4d4f;
  border-radius: 6rpx;
}
